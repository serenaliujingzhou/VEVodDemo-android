<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/errorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_load_fail"
            android:textColor="@color/white_70"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_click_to_retry"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_32"
            android:layout_marginTop="@dimen/qb_px_24"
            android:background="@drawable/white_border"
            android:gravity="center"
            android:paddingHorizontal="@dimen/qb_px_10"
            android:text="@string/click_to_retry"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/errorMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="gone"
        android:textColor="@color/red_100"
        android:textSize="10sp" />

</FrameLayout>
