<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="229dp"
    android:layout_gravity="center"
    android:background="@drawable/vevod_mini_drama_episode_payment_dialog_bg">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="付费解锁本集"
        android:textColor="#161823"
        android:textFontWeight="500"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/price"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:drawableRight="@drawable/vevod_mini_drama_episode_payment_money_ic"
        android:drawablePadding="2dp"
        android:text="9.9"
        android:textColor="#000000"
        android:textFontWeight="600"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/pay"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_above="@+id/cancel"
        android:layout_centerHorizontal="true"
        android:background="@drawable/vevod_mini_drma_episode_payment_btn_bg_selector"
        android:gravity="center"
        android:text="立即支付"
        android:textColor="#FFFFFF"
        android:textFontWeight="500"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="残忍离开"
        android:textColor="#99161823"
        android:textFontWeight="500" />

</RelativeLayout>