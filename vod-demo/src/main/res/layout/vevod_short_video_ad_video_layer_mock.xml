<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/vevod_short_video_ad_video_layer_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/ad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:textColor="#E6FFFFFF"
            android:textSize="16sp"
            tools:text="火山引擎视频点播" />

        <TextView
            android:id="@+id/ad_ic"
            android:layout_width="30dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"

            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/ad_title"
            android:background="@drawable/vevod_short_video_ad_ic_bg"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            tools:text="广告" />

    </RelativeLayout>

    <TextView
        android:id="@+id/ad_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:maxLines="3"
        android:textColor="#BFFFFFFF"
        android:textSize="13sp"
        tools:text="专业一站式解决方案，最低 1 折搭建音视频业务！" />

    <TextView
        android:id="@+id/ad_button"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/vevod_short_video_ad_video_button_bg"
        android:gravity="center"
        android:shadowColor="#26000000"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        tools:text="查看详情" />

</LinearLayout>





