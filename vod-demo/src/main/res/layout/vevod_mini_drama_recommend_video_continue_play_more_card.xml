<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/continuePlayMoreView"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="12dp"
    android:background="@drawable/vevod_mini_drama_video_bottom_bar_card_bg"
    android:padding="12dp"
    tools:background="@color/accent">

    <TextView
        android:id="@+id/continuePlayMoreDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:drawableLeftCompat="@drawable/vevod_mini_drama_recommend_video_continue_play_more_ic"
        tools:text="观看完整短剧 · 全20集" />

    <TextView
        android:id="@+id/continuePlayMoreButton"
        android:layout_width="68dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/vevod_mini_drama_video_continue_play_more_btn_bg"
        android:gravity="center"
        android:padding="0dp"
        android:shadowColor="#26000000"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/vevod_mini_drama_recommend_video_continue_play_more_btn_text"
        android:textColor="#FFFFFF"
        android:textFontWeight="500"
        android:textSize="12sp" />

</RelativeLayout>